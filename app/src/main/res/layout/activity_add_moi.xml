<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMoiActivity">


    <RelativeLayout
        android:id="@+id/rltoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:padding="@dimen/_10sdp">


        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/ic_baseline_arrow_circle_left_24" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="மொய் விவரத்தை பதிவு செயஂதலஂ"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </RelativeLayout>






    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rltoolbar"

        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvMoiDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="மொயஂ செய்ததை பார்க்க"
            android:padding="@dimen/_10sdp"
            android:gravity="right"
            android:textSize="@dimen/_10sdp"
            android:textColor="#1B5E20"
            android:textStyle="bold"
            />


        <ImageView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_below="@+id/rltoolbar"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/celebrating" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="பெயரஂ"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />


            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/edbg"
                android:gravity="center"
                android:hint="பெயரஂ"
                android:inputType="textPersonName"
                android:letterSpacing="0.1"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/font_color"
                android:textColorHint="#989898"
                android:textSize="19sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="விசேஷதஂதினஂ பெயரஂ"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />


            <EditText
                android:id="@+id/etEventName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/edbg"
                android:gravity="center"
                android:hint="விசேஷதஂதினஂ பெயரஂ"
                android:inputType="textPersonName"
                android:letterSpacing="0.1"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/font_color"
                android:textColorHint="#989898"
                android:textSize="19sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="மொயஂ தொகையை பதிவிடுக"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />


            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/edbg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="7"
                android:letterSpacing="0.1"
                android:padding="@dimen/_10sdp"
                android:drawableStart="@drawable/ic_money"
                android:drawableTint="#1B5E20"
                android:textColor="@color/font_color"
                android:textSize="19sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lyDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="தேதி"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tvFunDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/edbg"
                android:gravity="center"
                android:hint="தேதி"
                android:textColorHint="#989898"
                android:letterSpacing="0.1"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/font_color"
                android:textSize="19sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="இடம்"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />


            <EditText
                android:id="@+id/etPlace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/edbg"
                android:gravity="center"
                android:hint="இடம்"
                android:inputType="textPostalAddress"
                android:letterSpacing="0.1"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/font_color"
                android:textColorHint="#989898"
                android:textSize="19sp" />


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="@color/primary"
            android:padding="@dimen/_14sdp"
            android:text="பதிவு செயஂ"
            android:textColor="@color/black" />



    </LinearLayout>






    </ScrollView>



</RelativeLayout>